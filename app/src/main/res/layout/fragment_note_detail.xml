<?xml version="1.0" encoding="utf-8"?>
<!-- Katta konteyner sifatida ScrollView: kichik ekranlarda ham scroll qilish uchun -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/noteDetailScroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F8FF"
    android:fillViewport="true">

    <!-- Asosiy joylashtiruvchi konteyner: RelativeLayout ichida joylash -->
<RelativeLayout
android:id="@+id/noteDetailRoot"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:padding="16dp">

<!-- ðŸ‘ˆ Orqaga qaytish tugmasi -->
<ImageButton
    android:id="@+id/btnBack"
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:layout_alignParentStart="true"
    android:background="?attr/selectableItemBackgroundBorderless"
    android:contentDescription="Back"
    android:src="@drawable/ic_arrow_back2" />

<!-- âœï¸ Eslatmani tahrirlash tugmasi -->
<ImageButton
    android:id="@+id/btnEdit"
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:layout_alignParentEnd="true"
    android:layout_marginEnd="8dp"
    android:background="?attr/selectableItemBackgroundBorderless"
    android:contentDescription="Edit"
    android:src="@drawable/ic_edit1" />

<!-- ðŸ“ Eslatma sarlavhasi (katta shrift) -->
<TextView
    android:id="@+id/textTitleDetail"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/btnBack"
    android:layout_marginTop="32dp"
    android:fontFamily="@font/poppins"
    android:text="Note Title"
    android:textColor="@color/title_color"
    android:textSize="24sp"
    android:textStyle="bold" />

<!-- ðŸ“„ Eslatma tavsifi -->
<TextView
    android:id="@+id/textDescriptionDetail"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/textTitleDetail"
    android:layout_marginTop="16dp"
    android:fontFamily="@font/poppins"
    android:text="Note description goes here..."
    android:textColor="@color/desc_color"
    android:textSize="18sp" />

<!-- ðŸ—‚ï¸ Eslatma kategoriyasi -->
<TextView
    android:id="@+id/textCategoryDetail"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/textDescriptionDetail"
    android:layout_marginTop="16dp"
    android:fontFamily="@font/poppins"
    android:text="Category: General"
    android:textColor="@color/time_color"
    android:textSize="16sp" />

<!-- â° Reminder vaqti -->
<TextView
    android:fontFamily="@font/poppins"
    android:id="@+id/textReminderDetail"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/textCategoryDetail"
    android:layout_marginTop="8dp"
    android:text="Reminder: 12:00"
    android:textSize="16sp"
    android:textColor="@color/time_color" />
</RelativeLayout>
    </ScrollView>
