<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:layout_margin="6dp"
    android:foreground="?attr/selectableItemBackgroundBorderless">

    <!--
        Rangni ifodalovchi View.
        Rang kodi dasturdan dinamik ravishda background orqali beriladi.
        Masalan: viewColor.setBackgroundColor(color)
    -->
    <View
        android:id="@+id/viewColor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_circle_gray" />

    <!--
        Rang tanlanganda ko‘rinadigan belgi (check mark).
        Default holatda 'gone' bo‘lib, tanlanganda 'visible' qilinadi.
        Masalan: imageCheck.visibility = View.VISIBLE
    -->
    <ImageView
        android:id="@+id/imageCheck"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerInside"
        android:src="@drawable/ic_check"
        android:visibility="gone"
        app:tint="@android:color/white" />

</FrameLayout>
